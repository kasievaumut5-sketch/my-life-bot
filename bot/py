# –§—É–Ω–∫—Ü–∏—è –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏—è
async def send_message(text):
    try:
        await bot.send_message(chat_id=CHAT_ID, text=text)
        print(f"‚úÖ –û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ: {text}")
    except Exception as e:
        print(f"‚ùå –û—à–∏–±–∫–∞: {e}")

# –§—É–Ω–∫—Ü–∏–∏ –¥–ª—è —Ä–∞—Å–ø–∏—Å–∞–Ω–∏—è
async def morning_reminder():
    await send_message("üåÖ –î–æ–±—Ä–æ–µ —É—Ç—Ä–æ! –í—Ä–µ–º—è –Ω–∞—á–∏–Ω–∞—Ç—å –¥–µ–Ω—å! –ó–∞—Ä—è–¥–∫–∞, –∑–∞–≤—Ç—Ä–∞–∫, –≤–æ–¥–∞!")

async def study_reminder():
    await send_message("üìö –í—Ä–µ–º—è —É—á–∏—Ç—å—Å—è! –ó–Ω–∞–Ω–∏—è - —ç—Ç–æ —Ç–≤–æ—è —Å—É–ø–µ—Ä—Å–∏–ª–∞!")

async def english_reminder():
    await send_message("üåç –ê–Ω–≥–ª–∏–π—Å–∫–∏–π time! 5 –Ω–æ–≤—ã—Ö —Å–ª–æ–≤ –∏ –ø–æ–¥–∫–∞—Å—Ç!")

async def motivation_reminder():
    phrase = random.choice(MOTIVATIONS)
    await send_message(f"üéóÔ∏è {phrase}")

async def evening_reminder():
    await send_message("üåô –í–µ—á–µ—Ä–Ω–∏–π —Ä–∏—Ç—É–∞–ª: 1 –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–µ + 1 –º—ã—Å–ª—å –æ—Ç–ø—É—Å—Ç–∏—Ç—å")

async def sleep_reminder():
    await send_message("üò¥ –ü–æ—Ä–∞ —Å–ø–∞—Ç—å! –û—Ç–ª–æ–∂–∏ —Ç–µ–ª–µ—Ñ–æ–Ω, –∑–∞–≤—Ç—Ä–∞ –±—É–¥–µ—Ç –ø—Ä–æ–¥—É–∫—Ç–∏–≤–Ω—ã–π –¥–µ–Ω—å!")

# –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è
async def main():
    print("üé™ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω –≤ –æ–±–ª–∞–∫–µ!")
    
    # –¢–µ—Å—Ç–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
    await send_message("üöÄ –ë–æ—Ç —É—Å–ø–µ—à–Ω–æ –∑–∞–ø—É—â–µ–Ω –≤ –æ–±–ª–∞–∫–µ! –†–∞–±–æ—Ç–∞—é 24/7!")
    
    # –ù–∞—Å—Ç—Ä–æ–π–∫–∞ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏—è
    schedule.every().day.at("07:00").do(lambda: asyncio.create_task(morning_reminder()))
    schedule.every().day.at("10:00").do(lambda: asyncio.create_task(study_reminder()))
    schedule.every().day.at("17:00").do(lambda: asyncio.create_task(english_reminder()))
    schedule.every().day.at("19:00").do(lambda: asyncio.create_task(motivation_reminder()))
    schedule.every().day.at("19:40").do(lambda: asyncio.create_task(evening_reminder()))
    schedule.every().day.at("23:40").do(lambda: asyncio.create_task(sleep_reminder()))
    
    # –ë–µ—Å–∫–æ–Ω–µ—á–Ω—ã–π —Ü–∏–∫–ª
    while True:
        schedule.run_pending()
        await asyncio.sleep(60)

if __name__ == "__main__":
    asyncio.run(main())
